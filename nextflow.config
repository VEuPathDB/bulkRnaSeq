docker.runOptions = '-u $(id -u):$(id -g)'
docker.enabled = true

process {
    withName:HisatMappingSingleEnd {
        container = 'veupathdb/shortreadaligner'
    }

    withName:HisatMappingPairedEnd {
        container = 'veupathdb/shortreadaligner'
    }

    withName:HisatIndex {
        container = 'veupathdb/shortreadaligner'
    }

    withName:HtseqCountingUnstranded {
        container = 'genomicpariscentre/htseq'
    }

    withName:HtseqCountingStranded {
        container = 'genomicpariscentre/htseq'
    }


}

params {                                                                                                                           
    reads = "$projectDir/data/Fastq"
    fastq_files = "$projectDir/data/Fastq/*fq*"
    index = "$projectDir/data/index/genomeIndex"
    isPaired = true
    isStranded = true
    intronLenght = 3636
    adaptersPE = "$projectDir/data/Adapters/All_adaptors-PE.fa"
    adaptersSE = "$projectDir/data/Adapters/All_adaptors-SE.fa"
    results = "Results"
    reference = "$projectDir/data/Reference/pfal3D7_chr1.fasta"
    annotation = "$projectDir/data/Reference/pfal3D7.gtf"
    fastqcExtension = '*fq.gz*'
}