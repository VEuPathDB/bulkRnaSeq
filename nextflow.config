docker.runOptions = '-u $(id -u):$(id -g)'
docker.enabled = true

params {                                                                                                                           
    reads = "$projectDir/data/UnpairedFastq"
    fastq_files = "$projectDir/data/UnpairedFastq/*fq*"
    index = "$projectDir/data/index/genomeIndex"
    isPaired = true
    isStranded = true
    intronLenght = 3636
    adaptersPE = "$projectDir/data/Adapters/All_adaptors-PE.fa"
    adaptersSE = "$projectDir/data/Adapters/All_adaptors-SE.fa"
    results = "Results"
    reference = "$projectDir/data/Reference/pfal3D7_chr1.fasta"
    annotation = "$projectDir/data/Reference/pfal3D7.gtf"
    fastqcExtension = '*fq.gz*'
}

trace {
    enabled = true
    file = "myExecutionTrace.txt"
    overwrite = false
    trace.overwrite = true
}
report {
    enabled = true
    file = "myExecutionreport.html"
    overwrite = true
    trace.overwrite = true
}